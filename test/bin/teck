#! /bin/bash

# Chromebook keycodes:
# Search (Super_L) = 133, 0x85
# Ctrl_L = 37, 0x25
# Alt_L = 64, 0x40
# Alt_R = 108, 0x6c
# Ctrl_R (Super_R) = 134, 0x86
# Caps_Lock = 66

# mod1 = normal alt key
# mod5 = emacs s

xmodmap - <<EOF
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5
clear lock
keycode 64 = Alt_L
keycode 105 = Alt_R
keycode 37 = Control_L
keycode 105 = Control_R
keycode 134 = Control_R
keycode 133 = Super_L
add control = Control_L
add control = Control_R
add mod1 = Alt_L
add mod1 = Alt_R
add mod4 = Super_L
add mod4 = Super_R
EOF
