#! /bin/bash

# Script run every day at midnight.

IFS=

# Make a log file.
log_dir=~/logs
if [[ -d $log_dir ]]; then
  log_file=$log_dir/daily.log
  echo "Log file generated by $0" > $log_file
else
  log_file=/dev/null
fi

# Fix permissions in /usr/local/devh
#chmod g+w -R /usr/local/devh

# Delete old core files.
find ~ -regex '.*/core\([0-9]\)*' -atime +7 -exec rm {} \;

# Find old Vim swap files.
echo $'\n' "Old vim swap files:" >>$log_file
find -regex '/tmp/.*\.sw.' -atime +7 >> $log_file

# Back up files to lcc100