#! /bin/bash

# Chromebook keycodes:
# Search (Super_L) = 133, 0x85
# Ctrl_L = 37, 0x25
# Alt_L = 64, 0x40
# Alt_R = 108, 0x6c
# Ctrl_R (Super_R) = 134, 0x86
# Caps_Lock = 66

# mod1 = normal alt key
# mod5 = emacs s

xmodmap - <<EOF
clear Lock
keycode 66 = Control_L
add Control = Control_L
EOF

xmodmap - <<EOF
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5
clear lock
keycode 0x85 = Super_L
keycode 0x25 = Control_L
keycode 0x40 = Alt_L
keycode 0x6c = Alt_R
keycode 134 = Super_R
add control = Control_L
add mod1 = Alt_L
add mod1 = Alt_R
add mod4 = Super_R
EOF
